<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:state_pressed="false"
        android:color="@color/white">
        <shape>
            <solid android:textColor="@color/white" />
            <corners android:radius="5dp" />
            <stroke
                android:width="0.1dp"
                android:color="@color/white" />
            <gradient
                android:angle="270"
                android:startColor="#231917"
                android:centerColor="#17354C"
                android:endColor="#026CB1"
                android:type="linear" />
            <padding
                android:left="15dp"
                android:top="5dp"
                android:right="15dp"
                android:bottom="5dp" />
        </shape>
    </item>

    <item
        android:state_pressed="true"
        android:color="@color/black">
        <shape>
            <solid android:textColor="@color/white" />
            <corners android:radius="5dp" />
            <stroke
                android:width="0.1dp"
                android:color="@color/white" />
            <gradient
                android:angle="270"
                android:startColor="#999999"
                android:centerColor="#999999"
                android:endColor="#999999"
                android:type="linear" />
            <padding
                android:left="15dp"
                android:top="5dp"
                android:right="15dp"
                android:bottom="5dp" />
        </shape>
    </item>
</selector>