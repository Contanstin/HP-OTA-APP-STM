<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape>
            <solid android:color="#D0D4D7"/>
            <padding
                android:left="15dp"
                android:top="10dp"
                android:right="15dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape>
            <solid android:color="#999999"/>
            <padding
                android:left="15dp"
                android:top="10dp"
                android:right="15dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>